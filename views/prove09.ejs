<!DOCTYPE html>
<html>
   <head>
      <title>Postal Rate Calculator</title>
      <link rel='stylesheet' href='/stylesheets/style.css' />
      <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> -->
      <script>
         function ajax() {
            var str = "weight="+document.querySelector('#weight').value+"&type="+document.querySelector('#type').value+"&ajax=true";
            console.log(str);
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
               if (this.readyState == 4 && this.status == 200) {
                  document.querySelector("div").innerHTML = this.responseText;
               }
            };
            xhttp.open("GET", "/prove09/calc?"+str, true);
            xhttp.send();
         }
      </script>
   </head>
   <body>
      <h1>Postal Rate Calculator</h1>
      <form action='/prove09/calc'>
         <label>Item Weight: <input type=number id=weight name=weight required></input></label></br>
         <label>Type: <select id=type name=type>
            <option value=stamp>Letter (Stamped)</option>
            <option value=meter>Letter (Metered)</option>
            <option value=large>Large Envelope (Flat)</option>
            <option value=package>First-Class Package Serviceâ€”Retail</option>
         </select></label></br>
         <input type=submit value=Calculate />
      </form>
      <button onclick='ajax()'>Ajax Calculate</button>
      <div></div>
   </body>
</html>
